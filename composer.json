{
    "name": "abo3adel/ft",
    "description": "an simple mvc app",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "ahmed adel",
            "email": "abo3adel35@gmail.com"
        }
    ],
    "require": {
        "filp/whoops": "^2.4",
        "nikic/fast-route": "dev-master",
        "symfony/dependency-injection": "^4.3",
        "symfony/config": "^4.3",
        "symfony/yaml": "^4.3",
        "symfony/http-foundation": "^4.3",
        "league/plates": "v3.*",
        "hashids/hashids": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "8",
        "mockery/mockery": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "DB\\": "database/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AppTest\\": "tests/AppTest/"
        }
    },
    "scripts": {
        "asset": [
            "sass --update --error-css --color --style=compressed resources/sass/app.scss public/assets/css/app.css"
        ],
        "test": "phpunit --colors=always",
        "test-log": "phpunit --colors=always --testdox-text storage/tmp/clover.txt"
    },
    "scripts-descriptions": {
        "test": "Run all tests!"
    }
}
